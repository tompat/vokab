<h2 class="mb-4">
  Change your password
</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New password", autofocus: true %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password" %>
  </div>

  <div class="d-grid">
    <%= f.submit "Change my password", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="text-start mt-2">
  <%= render "devise/shared/links" %>
</div>
