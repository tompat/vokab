<ul id="slide-menu" class="sidenav sidenav-fixed indigo lighten-5">
  <li>
    <a href="/" class="brand-logo">Vokab</a>

    <% if current_user.is_me? %>
      <div id="not_known_counter" class="custom-badge red right hide-on-med-and-down">
        <%= current_user.counter %>
      </div>
    <% end %>
  </li>

  <li>
    <a href="<%= new_item_path %>">
      <i class="material-icons">add_circle</i>Add
    </a>
  </li>

  <li>
    <a href="#search-modal" class="modal-trigger">
      <i class="material-icons">search</i>Search
    </a>
  </li>

  <li>
    <%= link_to pending_items_path do %>
      Pending

      <% if @pending_count > 0 %>
        <span class="new badge red"><%= @pending_count %></span>
      <% end %>
    <% end %>
  </li>

  <li>
    <%= link_to "Edit profile", edit_user_registration_path %>
  </li>

  <li>
    <%= link_to "Contact", "mailto: contact@vokab.io", target: '_blank' %>
  </li>

  <li>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
  </li>

  <% if current_user.is_admin? %>
    <li>
      <%= link_to "Database", '/rails/db', target: '_blank' %>
    </li>
  <% end %>
</ul>

<script>
  $(function() {
    $('.sidenav').sidenav();
  })
</script>