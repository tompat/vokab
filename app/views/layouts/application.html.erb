<!DOCTYPE html>
<html>
  <head>
    <title>Vokab</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="bg-dark">
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Vokab</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Add", new_item_path, class: "nav-link" %>
            </li>

            <li class="nav-item">
              <%= link_to pending_items_path, class: "nav-link" do %>
                Pending

                <% if @pending_count > 0 %>
                  <span class="badge bg-danger"><%= @pending_count %></span>
                <% end %>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to "Edit profile", edit_user_registration_path, class: "nav-link" %>
            </li>

            <li>
              <%= link_to "Contact", "mailto: contact@vokab.io", target: '_blank', class: "nav-link" %>
            </li>

            <li class="nav-item">
              <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "nav-link" %>
            </li>

            <% if current_user.is_admin? %>
              <li>
                <%= link_to "Database", '/rails/db', target: '_blank', class: "nav-link" %>
              </li>
            <% end %>
          </ul>

          <%= form_with url: search_items_path, method: :get, class: "d-flex", local: true do |form| %>
            <%= form.text_field :query, class: "form-control me-2", type: "search", placeholder: "Search" %>

            <%= button_tag class: "btn btn-primary" do %>
              <i class="bi-search"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container text-center">
      <div class="mt-3">
        <%= render "layouts/flash_messages" %>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
